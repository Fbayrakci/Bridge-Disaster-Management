<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acÄ±k_mavi"
    tools:context=".reguest_help_form">

    <LinearLayout
        android:id="@+id/top_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/dark_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="58dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor="@color/yesil"
                android:text="Request Help"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/authformname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>


            <TextView
                android:id="@+id/autformsurname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/autformphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/autformemail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/autregion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/autaidcenter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_edit_text_back"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:drawableTint="@color/yesil"
                android:hint="..."
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/chooseCategory"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/yesil"
                android:paddingStart="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose Category"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/chooseUrun"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/yesil"
                android:paddingStart="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteUrun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose Item"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/chooseMiktar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/yesil"
                android:paddingStart="10dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteMiktar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choose Quantity"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/autformApproved"
                android:layout_width="160dp"
                android:background="@drawable/background_button"
                android:layout_height="wrap_content"
                android:onClick="signinClick"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="Approved"
                android:textColor="@color/yesil"
                android:textSize="20dp"/>


        </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>